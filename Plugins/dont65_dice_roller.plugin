    def create_settings(self):
        settings = [
            Header("üé≤ –ù–∞—Å—Ç—Ä–æ–π–∫–∏ Dice Roller"),
            Divider(text=f"–í–µ—Ä—Å–∏—è: {__version__}"),
            
            # –ù–æ–≤—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
            Switch(
                key="enable_plugin",
                text="–í–∫–ª—é—á–∏—Ç—å –∫–æ–º–∞–Ω–¥—É .roll",
                default=True
            ),
            Input(
                key="custom_name",
                text="–ö–∞—Å—Ç–æ–º–Ω–æ–µ –∏–º—è",
                subtext="–ò–º—è –æ—Ç–æ–±—Ä–∞–∂–∞–µ–º–æ–µ –ø—Ä–∏ –±—Ä–æ—Å–∫–µ (–æ—Å—Ç–∞–≤—å—Ç–µ –ø—É—Å—Ç—ã–º –¥–ª—è —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω–æ–≥–æ)",
                default=""
