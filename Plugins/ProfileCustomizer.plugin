        return [self._language_display(code) for code in self.LANGUAGE_CHOICES]

    def _resolve_activity_from_view(self, view):
        try:
            if view is None:
                return None
            context = view.getContext()
            ActivityClass = Activity
            visited = set()
            while context is not None and context not in visited:
                visited.add(context)
                try:
                    if isinstance(context, ActivityClass):
                        return context
                except Exception:
                    pass
                base = None
                for attr in ("getBaseContext", "getContext", "getApplicationContext"):
                    try:
                        candidate = getattr(context, attr)()
                        if candidate is not None and candidate is not context:
                            base = candidate
                            break
                    except Exception:
                        continue
                if base is None or base is context:
                    break
                context = base
        except Exception:
            return None
        return None

    def _on_language_selector_change(self, new_index: int):
        try:
            codes = list(self.LANGUAGE_CHOICES)
            if new_index < 0 or new_index >= len(codes):
                lang = self.LANGUAGE_DEFAULT
            else:
                lang = codes[new_index]
            self.set_setting(self.SETTINGS_LANGUAGE, lang)
            self._language = lang
            self._reload_plugin_settings()
            self._notify(self._t("language_changed", language=self._language_display(lang)))
            self._add_or_update_profile_menu_item()
        except Exception:
            pass

