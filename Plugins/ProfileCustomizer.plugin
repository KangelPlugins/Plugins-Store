        try:
            lang = self.get_setting(self.SETTINGS_LANGUAGE, self.LANGUAGE_DEFAULT)
            if lang in self.LANGUAGE_CHOICES:
                return lang
        except Exception:
            pass
        return self.LANGUAGE_DEFAULT

