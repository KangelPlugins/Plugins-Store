    def _t(self, key: str, **kwargs) -> str:
        try:
            lang = getattr(self, "_language", None)
            if lang not in self.LANGUAGE_CHOICES:
                lang = self.LANGUAGE_DEFAULT
            text = self._translations.get(lang, {}).get(key)
            if text is None:
                text = self._translations.get(self.LANGUAGE_RU, {}).get(key, key)
            if kwargs:
                try:
                    text = text.format(**kwargs)
                except Exception:
                    pass
            return text
        except Exception:
            return key

