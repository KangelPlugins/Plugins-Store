    def create_settings(self):
        return self._build_settings()

    def get_settings(self):
        return self._build_settings()

    def _build_settings(self):
        try:
            self._language = self._get_language()
            # --- Подготовка значений для элементов управления ---
            blur_percent = self._get_percent(self.SETTINGS_BLUR_INTENSITY, 60)
            darken_percent = self._get_percent(self.SETTINGS_DARKEN_INTENSITY, 70)
            is_avatar_banner_enabled = self._get_bool(self.SETTINGS_AVATAR_BANNER_ENABLE, True)

            effect_values = list(self.EFFECT_CHOICES)
            effect_labels = self._effect_labels()
            current_effect_value = self._get_effect_str(
                self.SETTINGS_AVATAR_BANNER_EFFECT,
                self.EFFECT_BLUR_DARKEN
            )
            try:
                effect_default_index = effect_values.index(current_effect_value)
            except ValueError:
                effect_default_index = 0

            # --- Построение списка UI компонентов ---
            rows = [
                Header(text=self._t("settings_header_main"))
            ]

            # --- Секция: Язык ---
            rows.append(Header(text=self._t("language_section_header")))
            rows.append(Text(
                text=self._t(
                    "language_change_action",
                    language=self._language_display(self._language)
                ),
                on_click=lambda view: self._show_language_choice_dialog(view)
            ))
            if HAS_DIVIDER:
                rows.append(Divider())

            # --- Секция: Кастомный фон ---
            rows.append(Header(text=self._t("custom_background_header")))
            rows.append(Input(
                key=self.SETTINGS_BLUR_INTENSITY,
                text=self._t("blur_strength_label"),
                subtext=self._t("blur_strength_subtext"),
                default=str(blur_percent),
                on_change=self._on_blur_intensity_changed
            ))
            rows.append(Input(
                key=self.SETTINGS_DARKEN_INTENSITY,
                text=self._t("darken_strength_label"),
                subtext=self._t("darken_strength_subtext"),
                default=str(darken_percent),
                on_change=self._on_darken_intensity_changed
            ))
            if HAS_DIVIDER:
                rows.append(Divider(text=self._t("background_instruction")))
            else:
                rows.append(Text(
                    text=self._t("background_instruction")
                ))

            if HAS_DIVIDER:
                rows.append(Divider())

            # --- Секция: Баннер по аватарке ---
            rows.append(Header(text=self._t("avatar_banner_header")))
            rows.append(Switch(
                key=self.SETTINGS_AVATAR_BANNER_ENABLE,
                text=self._t("avatar_banner_switch"),
                subtext=self._t("avatar_banner_switch_subtext"),
                default=is_avatar_banner_enabled,
                on_change=self._on_avatar_banner_enable_changed
            ))
            # Только показываем селектор если функция включена
            if is_avatar_banner_enabled:
                rows.append(Text(
                    text=self._t(
                        "avatar_effect_label_with_value",
                        value=effect_labels[effect_default_index]
                    ),
                    on_click=lambda view: self._show_effect_choice_dialog()
