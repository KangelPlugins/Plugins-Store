        try:
            res = param.getResult()
            if res is None:
                return
            # res is java.util.ArrayList
            # Inject synthetic dialog at position 0 if not present
            try:
                # Only inject for main folder (folderId == 0)
                folderId = param.args[2]
                if folderId != 0:
                    return
                size = res.size()
                exists = False
                for i in range(size):
                    d = res.get(i)
                    if hasattr(d, 'id') and d.id == self.plugin.WALL_DIALOG_ID:
